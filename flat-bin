#!/bin/sh

binfolder=$HOME/.local/bin/

# IFS=$'\n'

flatpak list --app | while read -r app
do
  appname="$(echo "$app" | awk '{print $1}')-Flatpak"
  applaunchname=$(echo "$app" | awk '{print $2}')
  appdir="$binfolder$appname"
  touch "$appdir"
  echo "#!/bin/sh

flatpak run $applaunchname

  " > "$appdir"
  echo "$appdir"
  # echo "$appname   $applaunchname"
  chmod +x "$appdir"
done

